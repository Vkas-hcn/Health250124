<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="64dp">
        <androidx.appcompat.widget.AppCompatImageButton
            android:layout_width="56dp"
            android:id="@+id/back"
            android:background="@android:color/transparent"
            android:src="@mipmap/icon_direction"
            android:layout_height="match_parent"></androidx.appcompat.widget.AppCompatImageButton>

        <TextView
            android:text="Blood Pressure Care"
            android:textSize="20sp"
            android:layout_marginStart="56dp"
            android:layout_gravity="center_vertical"
            android:textStyle="bold"
            android:textColor="#FF222222"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:layout_width="60dp"
            android:background="@android:color/transparent"
            android:visibility="gone"
            tools:visibility="visible"
            android:src="@mipmap/icon_delete"
            android:id="@+id/delete"
            android:layout_gravity="end"
            android:layout_height="match_parent"></androidx.appcompat.widget.AppCompatImageButton>

    </FrameLayout>

   <androidx.core.widget.NestedScrollView
       android:layout_width="match_parent"
       android:layout_marginTop="64dp"
       android:fillViewport="true"
       android:layout_marginBottom="76dp"
       android:layout_height="match_parent">
       <LinearLayout
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <FrameLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <FrameLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <ImageView
                       android:src="@mipmap/img_human_record"
                       android:layout_width="wrap_content"
                       android:layout_marginStart="18dp"
                       android:layout_height="wrap_content"></ImageView>

                   <TextView
                       android:textColor="#FF222222"
                       android:textStyle="bold"
                       android:layout_marginEnd="20dp"
                       android:layout_gravity="end"
                       android:layout_marginTop="21dp"
                       android:text="input your blood sugar and check your recordsï¼"
                       android:layout_width="133dp"
                       android:layout_height="wrap_content"></TextView>

               </FrameLayout>
               <LinearLayout
                   android:layout_marginTop="98dp"
                   android:layout_width="match_parent"
                   android:orientation="vertical"
                   android:layout_height="wrap_content">
                   <FrameLayout
                       android:layout_marginHorizontal="20dp"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">
                       <com.google.android.material.imageview.ShapeableImageView
                           android:layout_width="match_parent"
                           app:strokeColor="@color/black"
                           android:padding="1dp"
                           android:background="@color/white"
                           app:strokeWidth="1dp"
                           app:shapeAppearance="@style/corner24"
                           android:layout_height="match_parent"></com.google.android.material.imageview.ShapeableImageView>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_marginTop="12dp"
                        android:layout_marginHorizontal="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="46dp">
                        <androidx.appcompat.widget.AppCompatEditText
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:id="@+id/input"
                            android:paddingStart="16dp"
                            android:textSize="16sp"
                            tools:text="jflas"
                            android:digits="0123456789."
                            android:inputType="number"
                            android:textColor="#000"
                            android:drawablePadding="8dp"
                            android:textColorHint="#000"
                            android:drawableStart="@mipmap/icon_input"
                            android:background="@drawable/r12"
                            android:backgroundTint="#F6F9F9"
                            android:layout_height="match_parent"></androidx.appcompat.widget.AppCompatEditText>

                        <androidx.appcompat.widget.AppCompatButton
                            android:layout_width="85dp"
                            android:layout_marginStart="8dp"
                            android:background="@drawable/r12"
                            android:text="Mg/dl"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:id="@+id/switchUnit"
                            android:textColor="#222"
                            android:textAllCaps="false"
                            android:paddingEnd="12dp"
                            android:drawableEnd="@mipmap/icon_toggle"
                            android:backgroundTint="#F6F9F9"
                            android:layout_height="match_parent"></androidx.appcompat.widget.AppCompatButton>
                    </LinearLayout>

                       <FrameLayout
                           android:id="@+id/stateLa"
                           android:layout_marginTop="74dp"
                           android:layout_marginHorizontal="12dp"
                           android:background="@drawable/r12"
                           android:backgroundTint="#F6F9F9"
                           android:layout_width="match_parent"
                           android:layout_height="52dp">

                           <LinearLayout
                               android:orientation="horizontal"
                               android:layout_gravity="center"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content">
                               <ImageView
                                   android:id="@+id/stateIv"
                                   android:layout_width="wrap_content"
                                   tools:src="@mipmap/i_opt0"
                                   android:layout_height="wrap_content"></ImageView>

                               <TextView
                                   android:id="@+id/stateTv"
                                   android:layout_marginStart="12dp"
                                   tools:text="Blood Pressure Care"
                                   android:textSize="14sp"
                                   android:layout_gravity="center_vertical"
                                   android:textColor="#222222"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"/>

                           </LinearLayout>

                           <ImageView
                               android:layout_width="wrap_content"
                               android:src="@mipmap/arrow_down"
                               android:layout_marginEnd="16dp"
                               android:layout_gravity="end|center_vertical"
                               android:layout_height="wrap_content"></ImageView>

                       </FrameLayout>
                       
                       <ImageView
                           android:layout_width="match_parent"
                           android:layout_marginHorizontal="12dp"
                           android:layout_marginTop="142dp"
                           android:background="#1A000000"
                           android:layout_height="1dp"></ImageView>

                       <TextView
                           android:id="@+id/title"
                           android:text="Normal"
                           android:textSize="16sp"
                           android:layout_marginTop="159dp"
                           android:layout_marginStart="12dp"
                           android:drawableStart="@mipmap/icon_blood"
                           android:textStyle="bold"
                           android:textColor="#3AC34A"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"></TextView>

                       <TextView
                           android:id="@+id/time"
                           android:text="2023-08-01 10:56"
                           android:layout_gravity="end"
                           android:textSize="14sp"
                           android:layout_marginTop="159dp"
                           android:layout_marginEnd="12dp"
                           android:textColor="#999999"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"></TextView>

                       <LinearLayout
                           android:layout_marginTop="205dp"
                           android:layout_width="match_parent"
                           android:orientation="horizontal"
                           android:layout_marginHorizontal="12dp"
                           android:layout_height="wrap_content">
                           <FrameLayout
                               android:layout_marginHorizontal="4dp"
                               android:layout_width="0dp"
                               android:layout_weight="1"
                               android:layout_height="30dp">
                               <com.google.android.material.imageview.ShapeableImageView
                                   android:layout_width="match_parent"
                                   app:strokeWidth="1dp"
                                   android:id="@+id/selBgIv0"
                                   app:strokeColor="@color/white"
                                   android:padding="1dp"
                                   android:background="#D7ECFF"
                                   app:shapeAppearance="@style/corner4"
                                   android:layout_height="10dp"></com.google.android.material.imageview.ShapeableImageView>

                               <ImageView
                                   android:id="@+id/selLabIv0"
                                   android:layout_gravity="center_horizontal|bottom"
                                   android:layout_width="wrap_content"
                                   android:visibility="gone"
                                   android:src="@mipmap/ic_polygon2"
                                   android:layout_height="wrap_content"></ImageView>
                           </FrameLayout>
                           <FrameLayout
                               android:layout_marginHorizontal="4dp"
                               android:layout_width="0dp"
                               android:layout_weight="1"
                               android:layout_height="30dp">
                               <com.google.android.material.imageview.ShapeableImageView
                                   android:layout_width="match_parent"
                                   app:strokeWidth="1dp"
                                   app:strokeColor="@color/white"
                                   android:padding="1dp"
                                   android:id="@+id/selBgIv1"
                                   android:background="#BFFFC7"
                                   app:shapeAppearance="@style/corner4"
                                   android:layout_height="10dp"></com.google.android.material.imageview.ShapeableImageView>

                               <ImageView
                                   android:id="@+id/selLabIv1"
                                   android:layout_gravity="center_horizontal|bottom"
                                   android:layout_width="wrap_content"
                                   android:src="@mipmap/ic_polygon2"
                                   android:layout_height="wrap_content"></ImageView>
                           </FrameLayout>
                           <FrameLayout
                               android:layout_marginHorizontal="4dp"
                               android:layout_width="0dp"
                               android:layout_weight="1"
                               android:layout_height="30dp">
                               <com.google.android.material.imageview.ShapeableImageView
                                   android:layout_width="match_parent"
                                   app:strokeWidth="1dp"
                                   app:strokeColor="@color/white"
                                   android:id="@+id/selBgIv2"
                                   android:padding="1dp"
                                   android:background="#FFE0C3"
                                   app:shapeAppearance="@style/corner4"
                                   android:layout_height="10dp"></com.google.android.material.imageview.ShapeableImageView>

                               <ImageView
                                   android:id="@+id/selLabIv2"
                                   android:visibility="gone"
                                   android:layout_gravity="center_horizontal|bottom"
                                   android:layout_width="wrap_content"
                                   android:src="@mipmap/ic_polygon2"
                                   android:layout_height="wrap_content"></ImageView>
                           </FrameLayout>
                           <FrameLayout
                               android:layout_marginHorizontal="4dp"
                               android:layout_width="0dp"
                               android:layout_weight="1"
                               android:layout_height="30dp">
                               <com.google.android.material.imageview.ShapeableImageView
                                   android:layout_width="match_parent"
                                   app:strokeWidth="1dp"
                                   app:strokeColor="@color/white"
                                   android:padding="1dp"
                                   android:background="#FFD3D3"
                                   android:id="@+id/selBgIv3"
                                   app:shapeAppearance="@style/corner4"
                                   android:layout_height="10dp"></com.google.android.material.imageview.ShapeableImageView>

                               <ImageView
                                   android:id="@+id/selLabIv3"
                                   android:layout_gravity="center_horizontal|bottom"
                                   android:layout_width="wrap_content"
                                   android:visibility="gone"
                                   android:src="@mipmap/ic_polygon2"
                                   android:layout_height="wrap_content"></ImageView>
                           </FrameLayout>
                       </LinearLayout>

                       <TextView
                           tools:text="Blood Pressure Care"
                           android:textSize="14sp"
                           android:layout_marginBottom="12dp"
                           android:id="@+id/desc"
                           android:layout_marginTop="241dp"
                           android:layout_gravity="center_horizontal"
                           android:textColor="#999999"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"/>

                   </FrameLayout>

               </LinearLayout>
           </FrameLayout>
       </LinearLayout>
   </androidx.core.widget.NestedScrollView>



    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:textStyle="bold"
        android:textSize="16sp"
        android:text="Save"
        android:textAllCaps="false"
        android:id="@+id/save"
        android:textColor="@color/white"
        android:insetBottom="0dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="24dp"
        android:insetTop="0dp"
        app:cornerRadius="16dp"
        android:layout_height="52dp"></com.google.android.material.button.MaterialButton>
    
    
    
</FrameLayout>