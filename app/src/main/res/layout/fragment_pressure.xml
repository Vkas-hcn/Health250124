<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ui.press.PressureFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="64dp">
        <TextView
            android:text="Blood Pressure Care"
            android:textSize="28dp"
            android:layout_marginStart="20dp"
            android:layout_gravity="center_vertical"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:layout_width="80dp"
            android:src="@mipmap/add_circle"
            android:id="@+id/add"
            android:background="@android:color/transparent"
            android:layout_gravity="end"
            android:layout_height="match_parent"></androidx.appcompat.widget.AppCompatImageButton>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:id="@+id/rv"
            android:layout_height="match_parent"></androidx.recyclerview.widget.RecyclerView>

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/emptyView"
            android:text="No record"
            android:textColor="#D1DFDF"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_height="wrap_content"></TextView>

    </FrameLayout>

</LinearLayout>